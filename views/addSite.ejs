<%- include('partials/navbar', { page: '/addSite' }) %>

<section class="hero py-10">
  <div class="hero-content flex-col lg:flex-row">
    <div>
      <h1 class="text-3xl font-bold mb-5">Add Site</h1>

      <form action="/addSite" method="POST" class="space-y-4">

        <input name="siteId" type="text" placeholder="Site ID" class="input input-bordered w-full" required />
        <input name="site" type="text" placeholder="Site Name" class="input input-bordered w-full" required />
        <input name="image" type="url" placeholder="Image URL" class="input input-bordered w-full" required />
        <input name="date" type="number" placeholder="Date" class="input input-bordered w-full" required />
        <input name="dateType" type="text" placeholder="Date Type" class="input input-bordered w-full" required />
        <input name="designated" type="number" placeholder="Designated Year" class="input input-bordered w-full" required />
        <input name="location" type="text" placeholder="Location" class="input input-bordered w-full" required />
        
        <select name="provinceOrTerritoryCode" class="select select-bordered w-full" required>
          <option disabled selected>Select Province / Territory</option>
          <% provincesAndTerritories.forEach(p => { %>
            <option value="<%= p.code %>"><%= p.name %></option>
          <% }) %>
        </select>

        <textarea name="description" placeholder="Description" class="textarea textarea-bordered w-full"></textarea>
        <input name="latitude" type="number" step="0.00000001" placeholder="Latitude" class="input input-bordered w-full" required />
        <input name="longitude" type="number" step="0.00000001" placeholder="Longitude" class="input input-bordered w-full" required />

        <button type="submit" class="btn btn-primary w-full">Submit</button>
      </form>
    </div>
  </div>
</section>
